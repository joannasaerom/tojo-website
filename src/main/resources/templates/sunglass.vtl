
<div class="sunglassDescription">
  <h2>$sunglass.getName()</h2>
  <img src="$sunglass.getImgUrl()" class="img-responsive">
  <h4>Description</h4>
  <h4>$sunglass.getDescription()</h4>
  <h4>Price: $$sunglass.getPrice().00</h4>
  <h4>Remaining Quantity: $sunglass.getInventory()</h4>
  <a href="/sunglasses/$sunglass.getId()/purchase"><button type="submit" class="btn btn-default">Purchase</button></a>
</div>
